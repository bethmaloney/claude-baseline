{
  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(git blame:*)",
      "Bash(git shortlog:*)",
      "Bash(git branch:*)",
      "Bash(git tag:*)",
      "Bash(git remote:*)",
      "Bash(git ls-files:*)",
      "Bash(git ls-tree:*)",
      "Bash(git rev-parse:*)",
      "Bash(git describe:*)",
      "Bash(git cat-file:*)",
      "Bash(git config --get:*)",
      "Bash(git config --list:*)"
    ],
    "deny": [
      "Read(./.git/config)",
      "Read(~/.gitconfig)",
      "Read(~/.git-credentials)",
      "Read(./.git-credentials)"
    ]
  }
}
